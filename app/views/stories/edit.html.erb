
<h1> Edit your story <%= @story.name %> </h1> 

<%= form_tag("/stories/#{@story.id}", method: "post") do %>
<input type="hidden" name="_method" value="put">
<p> Name (required): <input type="text" name="name" value="<%= @story.name %>" required></p>
<p> Content: <input type="text" name="content" value="<%= @story.content %>" required></p>
<p> <input type="submit" value="submit"></p>
  
<%end %>
