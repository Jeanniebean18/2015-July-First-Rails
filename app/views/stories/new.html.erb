
<%= @story.errors.full_messages %>

<h1>Add a story </h1> 

<%= form_tag("/stories", method: "post") do %>
  <p> Name (required): <input type="text" placeholder="name of story" name="name" value="<%= params["name"]%>" required></p>
  <p> Content: <input type="text" placeholder="your story" name="content" value="<%= params["content"]%>" required></p>
  <input type="hidden" name = "user_id" value="<%=@user.id%>">
  <p> <input type="submit" value="submit"></p>
  <%end%>

